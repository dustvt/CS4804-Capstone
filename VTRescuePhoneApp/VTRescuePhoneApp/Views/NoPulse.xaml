<UserControl x:Class="VTRescuePhoneApp.NoPulse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <Rectangle Height="316" HorizontalAlignment="Left" Margin="60,61,0,0" Name="rectangle1" Stroke="WhiteSmoke" StrokeThickness="8" VerticalAlignment="Top" Width="354" StrokeLineJoin="Bevel" StrokeStartLineCap="Flat" Stretch="Fill" UseLayoutRounding="False" StrokeMiterLimit="8" StrokeEndLineCap="Flat">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFCAB2B4" Offset="0" />
                    <GradientStop Color="Black" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock Height="226" HorizontalAlignment="Left" Margin="70,74,0,180" Name="textBlock1" Text="Perform CPR until AED or EMS arrives. Push Hard and fast at a rate of 100/min (could we have a metronome here that beats 100 times a min)" VerticalAlignment="Center" Width="330" FontWeight="Normal" TextWrapping="Wrap" TextAlignment="Center" FontSize="26" />
        <Button Content="Close" Height="72" HorizontalAlignment="Left" Margin="155,286,0,0" Name="button1" VerticalAlignment="Top" Width="160" BorderBrush="White" BorderThickness="4" FontSize="24" Foreground="WhiteSmoke" UseLayoutRounding="True" Click="button1_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="Violet" Offset="0" />
                    <GradientStop Color="Black" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
